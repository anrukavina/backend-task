{% extends 'base.html.twig' %}

{% block body %}
	<style>
		img {
			width: 600px;
			height: 400px;
		}

		.carousel-caption {
			color: black;
		}

		button {
			color: black;
		}
	</style>

	<section class="m-5 p-5 rounded" style="background-color: white">
		<div class="container">
			<div class="row d-flex flex-row justify-content-center align-items-center">
				<div class="col-md-6">
					<div class="container">
						{% if product.id %}
							<!-- Carousel wrapper -->
							<div
								id="carouselBasicExample" class="carousel slide carousel-fade shadow-lg mb-5 bg-white" data-bs-ride="carousel">
								<!-- Indicators -->
								<div class="carousel-indicators">
									{% for key, image in product.images %}
										<button type="button" data-bs-target="#carouselBasicExample" data-bs-slide-to="{{ key }}" {% if key == 0 %} class="active" {% endif %} aria-current="true" aria-label="Slide {{ key}}"></button>
									{% endfor %}
								</div>

								<!-- Inner -->
								<div
									class="carousel-inner">
									<!-- Single item -->
									{% for key, image in product.images %}
										<div class="carousel-item {% if key == 0%} active {% endif %}">
											<img src="{{ image }}" class="d-block w-100 rounded" alt="Sunset Over the City"/>
											<div class="carousel-caption d-none d-md-block">
												<h5>First slide label</h5>
												<p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
											</div>
										</div>
									{% endfor %}
									<!-- Inner -->

									<!-- Controls -->
									<button class="carousel-control-prev" type="button" data-bs-target="#carouselBasicExample" data-bs-slide="prev">
										<span class="carousel-control-prev-icon" aria-hidden="true"></span>
										<span class="visually-hidden">Previous</span>
									</button>
									<button class="carousel-control-next" type="button" data-bs-target="#carouselBasicExample" data-bs-slide="next">
										<span class="carousel-control-next-icon" aria-hidden="true"></span>
										<span class="visually-hidden">Next</span>
									</button>
								</div>
							</div>
							<!-- Carousel wrapper -->
						{% endif %}
					</div>
				</div>
				<div class="col-md-6">
					<h5 class="pb-md-4">
						<b>{{ product.title }}</b>
					</h5>
					<p>
						<b>Description:</b>
						{{ product.description }}</p>
					<p>
						<b>Brand:</b>
						{{ product.brand }}</p>
					<p>
						<b>Category:</b>
						{{ product.category }}</p>
					<p>
						<b>Price:</b>
						{{ product.price }}</p>
					<p>
						<b>Rating:</b>
						{{ product.rating }}</p>
					<p>
						<b>In stock:</b>
						{{ product.stock }}</p>
				</div>
			</div>
			<div class="text-center">
				<a href="/products?page={{ (product.id) / 10|round(0, 'ceil') }}" class="btn btn-primary">Go back</a>
			</div>
		</div>
	</div>

</section>
